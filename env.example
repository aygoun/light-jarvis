# Jarvis Configuration
JARVIS_DEBUG=false
JARVIS_LOG_LEVEL=INFO

# Logging Configuration
JARVIS_LOG_LEVEL=INFO                    # Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
JARVIS_LOG_DIR=./logs                    # Directory for log files (date-organized: logs/YYYY/MM/)
JARVIS_LOG_CONSOLE=false                 # Enable/disable console output (true/false)
JARVIS_LOG_FILE=true                     # Enable/disable file logging (true/false)
JARVIS_LOG_RICH=true                     # Enable/disable rich formatting in console (true/false)
JARVIS_LOG_MAX_SIZE=10485760            # Max log file size in bytes before rotation (10MB)
JARVIS_LOG_BACKUP_COUNT=5               # Number of backup files to keep
JARVIS_LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S # Date format for log entries

# Ollama Configuration
JARVIS_OLLAMA__HOST=http://localhost:11434
JARVIS_OLLAMA__MODEL=mistral:7b
JARVIS_OLLAMA__TEMPERATURE=0.1

# MCP Configuration
JARVIS_MCP__HOST=localhost
JARVIS_MCP__PORT=8000

# Google Services
JARVIS_GOOGLE__CREDENTIALS_FILE=~/.jarvis/google_credentials.json
JARVIS_GOOGLE__TOKEN_FILE=~/.jarvis/google_token.json
